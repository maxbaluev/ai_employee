{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://docs.example.com/schemas/desk-state.json",
  "$comment": "DRAFT: sync with frontend-shared-state.md before production use.",
  "title": "DeskState",
  "type": "object",
  "required": ["queue", "lastUpdated"],
  "properties": {
    "queue": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "approved", "rejected"]
          },
          "evidence": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "highlighted": { "type": "boolean", "default": false }
        },
        "additionalProperties": false
      }
    },
    "lastUpdated": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
