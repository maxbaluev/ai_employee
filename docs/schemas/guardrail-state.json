{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://docs.example.com/schemas/guardrail-state.json",
  "$comment": "DRAFT: sync with frontend-shared-state.md before production use.",
  "title": "GuardrailState",
  "type": "object",
  "properties": {
    "quietHours": {
      "type": "object",
      "required": ["allowed", "message"],
      "properties": {
        "allowed": { "type": "boolean" },
        "message": { "type": "string" },
        "configured": { "type": "boolean" },
        "window": { "type": "string" },
        "currentTime": { "type": "string" }
      },
      "additionalProperties": false
    },
    "trust": {
      "type": "object",
      "required": ["allowed"],
      "properties": {
        "allowed": { "type": "boolean" },
        "score": { "type": "number" },
        "threshold": { "type": "number" },
        "source": { "type": "string" },
        "missingSignal": { "type": "boolean" },
        "message": { "type": "string" }
      },
      "additionalProperties": false
    },
    "scopeValidation": {
      "type": "object",
      "required": ["allowed", "missingScopes", "requestedScopes", "enabledScopes"],
      "properties": {
        "allowed": { "type": "boolean" },
        "missingScopes": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "requestedScopes": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "enabledScopes": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "message": { "type": "string" }
      },
      "additionalProperties": false
    },
    "evidence": {
      "type": "object",
      "required": ["required", "allowed", "missingEvidence"],
      "properties": {
        "required": { "type": "boolean" },
        "allowed": { "type": "boolean" },
        "missingEvidence": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "message": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
