{
  "name": "ai-employee-platform-ui",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.18.0",
  "description": "Next.js + CopilotKit shell for the Composio-only AI employee platform",
  "keywords": [
    "copilotkit",
    "composio",
    "adk",
    "ag-ui",
    "ai-employee"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:ui\" \"pnpm run dev:agent\" --names ui,agent --prefix-colors blue,green --kill-others",
    "dev:debug": "LOG_LEVEL=debug pnpm run dev",
    "dev:agent": "./scripts/run-agent.sh || scripts/run-agent.bat",
    "dev:ui": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "install:agent": "uv sync --extra test",
    "postinstall": "pnpm run install:agent"
  },
  "dependencies": {
    "@ag-ui/client": "0.0.38",
    "@copilotkit/react-core": "1.10.4",
    "@copilotkit/react-ui": "1.10.4",
    "@copilotkit/runtime": "1.10.4",
    "next": "15.4.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
